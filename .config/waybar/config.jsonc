        "on-click-right": "~/.config/waybar/scripts/network-onclick-right.sh",
		"max-length": 2,
    },

    "bluetooth": {
		"format": "Ôäî",
		"format-disabled": "Û∞Ç≤",
		"format-off": "Û∞Ç≤",
		"format-connected": "Û∞Ç±",
		"tooltip-format": "{device_alias}",
		"tooltip-format-connected": "{device_enumerate}",
		"tooltip-format-enumerate-connected": "Ôäî {device_alias}",
        "tooltip-format-enumerate-connected-battery": "Ôäî {device_alias}  ->  Û∞Åπ {device_battery_percentage}%",
        "on-click": "bash -c 'rfkill | grep \"bluetooth.* blocked .*\" -q && rfkill unblock bluetooth || rfkill block bluetooth'",
        "on-click-right": "rofi-bluetooth",
    }
}
