{
    "layer": "top",
    "position": "bottom",
    "exclusive": true,
    "passthrough": false,
    "height": 35,
    "modules-left": [
        "custom/powerprofile",
        "tray",
        "systemd-failed-units",
        "mpris",
    ],
    "modules-center": [
        "clock",
    ],
    "modules-right": [
        "backlight",
        "idle_inhibitor",
        "battery",
        "pulseaudio",
        "pulseaudio#microphone",
        "custom/vpn",
        "network",
        "bluetooth",
        "custom/notifications",
    ],
    "systemd-failed-units": {
        "format": "Û∞íì {nr_failed_system} ! Û∞ÄÑ {nr_failed_user}",
    },
    "custom/notifications": {
        "tooltip": false,
        "format": "{} {icon}",
        "format-icons": {
            // ÔÉ≥
            // Ôá∂
            "notification": "ÔÇ¢<span foreground='#CC241D' rise='-2pt'><sup>ÔëÑ</sup></span> ",
            "none": "ÔÇ¢<span alpha='1' rise='-2pt'><sup>ÔëÑ</sup></span> ",
            "dnd-notification": "Ôá∑<span foreground='#CC241D' rise='-2pt'><sup>ÔëÑ</sup></span> ",
            "dnd-none": "Ôá∑<span alpha='1' rise='-2pt'><sup>ÔëÑ</sup></span> ",
            "inhibited-notification": "ÔÇ¢<span foreground='#CC241D' rise='-2pt'><sup>ÔëÑ</sup></span> ",
            "inhibited-none": "ÔÇ¢<span alpha='1' rise='-2pt'><sup>ÔëÑ</sup></span> ",
            "dnd-inhibited-notification": "Ôá∑<span foreground='#CC241D' rise='-2pt'><sup>ÔëÑ</sup></span> ",
            "dnd-inhibited-none": "Ôá∑<span alpha='1' rise='-2pt'><sup>ÔëÑ</sup></span> ",
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true,
    },
    "custom/vpn": {
		"interval": "once",
        "exec-on-event": false,
        "signal": 8,
		"format": "{}",
        "tooltip": true,
        "max-length": 1,
		"return-type": "json",
		"exec": "~/.config/waybar/scripts/vpn-status.sh",
		"on-click": "~/.config/waybar/scripts/vpn-toggle.sh",
        "on-click-right": "~/.config/waybar/scripts/vpn-toggle.sh --interactive",
    },
    "custom/powerprofile": {
		"interval": "once",
		"format": "{}",
		"return-type": "json",
		"exec": "sleep 0.1 && ~/.config/waybar/scripts/power-profile-get.sh",
		"on-click": "~/.config/waybar/scripts/power-profile-cycle.sh",
    },

	// "custom/coffee": {
