    "tray": {
        "icon-size": 15,
        "spacing": 10
    },

    "mpris": {
		"format": "{player_icon} {title}",
		"format-paused": "{status_icon} <i>{title}</i>",
		"player-icons": {
			"default": "‚è∏"
			//"mpv": "üéµ"
		},
		"status-icons": {
			"paused": "‚ñ∂"
		},
		"max-length": 30
		// "ignored-players": ["firefox"]
    },

    "clock": {
		"interval": 1,
        "format": " {:%H:%M  %a, %b %e} ",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": ["Û∞Éû ", "Û∞Éü ", "Û∞É† "],
        "scroll-step": 0.1,
        "on-scroll-down": "~/.local/bin/brightness-up",
        "on-scroll-up": "~/.local/bin/brightness-down",
		"on-click": "systemctl --user is-active wl-gammarelay-rs.service -q && systemctl --user stop wl-gammarelay-rs.service -q || systemctl --user start wl-gammarelay-rs.service -q",
        "min-length": 7,
		"tooltip": false
    },

    "battery": {
        "states": {
	    "full": 100,
            "warning": 35,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Û∞ö• {capacity}%",
        "format-plugged": "Û∞ö• {capacity}%",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
        "tooltip": false,
        "min-length": 7
    },

    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "tooltip": false,
        "format-muted": "Û∞∏à  {volume}%",
        "on-click-right": "bash -c 'pactl set-default-sink \"$(pactl list short sinks | grep -v \"$(pactl get-default-sink)\" | tail -n 1)\"'",
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        //"on-scroll-up": "flock -n sh -c 'amixer set Master 1%- unmute -q'",
        //"on-scroll-down": "flock -n sh -c 'amixer set Master 1%+ unmute -q'",
        "on-scroll-up": "~/.local/bin/volume-down",
        "on-scroll-down": "~/.local/bin/volume-up",
        //"scroll-step": 1,
        "format-icons": {
            "headphone": "ÔÄ•",
			"headset": "Û∞óæ",
			"hdmi": "Ôâ¨",
            "hands-free": "Û∞è≥",
